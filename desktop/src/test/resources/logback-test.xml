<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for test execution (shows all levels) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for test logs (separate from main application) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${user.home}/.askimo/logs/askimo-desktop-test.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover -->
            <fileNamePattern>${user.home}/.askimo/logs/askimo-desktop-test.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Keep 3 days of test history -->
            <maxHistory>3</maxHistory>
            <!-- Cap total test log size at 50MB -->
            <totalSizeCap>50MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="ERROR">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- Askimo application logging - controlled by LOGBACK_LEVEL env var -->
    <logger name="io.askimo" level="${LOGBACK_LEVEL:-DEBUG}" />
</configuration>

